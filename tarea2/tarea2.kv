<ScrollProyecto@ScrollView>:
    orientation: 'vertical'
    bar_width: '20dp'
    size_hint: 1,None
    bar_color: 1,0,0,.9
    bar_inactive_color: 1,0,0,.2

    canvas.before:
        Color:
            rgb: 0.1,0.1,0.1
        Rectangle:
            size: self.size
            pos: self.pos

#Definicion de grid de datos
<GridProyecto>:
    gHeader: gheader1
    gBody: gbody1

    anchor_x: 'left'
    anchor_y: 'top'
#    canvas.before:
#        Color:
#            rgb: 1,1,1
#        Rectangle:
#            size: self.size
#            pos: self.pos
    GridLayout:
        id: gheader1
        cols: root.columnas
        spacing: 1
        pos: 0, root.height - root.rHeight
        size_hint: None, None
        height: root.rHeight
        row_default_height: root.rHeight
        row_force_default: False

    ScrollProyecto:
        height: root.height - (gheader1.height + 10)
        pos: 0, 0
        GridLayout:
            id: gbody1
            cols: root.columnas
            spacing: 1
            size_hint: 1, None
            row_default_height: root.rHeight
            row_force_default: False

#Definicion de encabezados de grid de datos
<GridHeader>:
    size_hint_x: None
    size_hint_y: None
    width: self.width
    height: self.height
    canvas.before:
        Color:
            rgb: self.bgcolor
        Rectangle:
            pos: self.pos
            size: self.size

#Definicion de celdas de grid de datos
<GridCell>:
    size_hint_x: None
    size_hint_y: None
    width: self.width
    height: self.height
    canvas.before:
        Color:
            rgb: self.bgcolor
        Rectangle:
            size: self.size
            pos: self.pos

